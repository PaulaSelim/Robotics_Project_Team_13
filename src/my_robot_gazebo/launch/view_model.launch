<?xml version="1.0"?>

<launch>
  <arg name="urdf_file" default="$(find my_robot_gazebo)/urdf/robot.urdf"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg urdf_file)"/>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" value="50.0"/>
  </node>

  <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" output="screen">
  </node>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find my_robot_gazebo)/rviz/model_view.rviz"/>
</launch>
